{
  "name": "playwright-bdd-assistant",
  "displayName": "Playwright-BDD Automation Chat Assistant",
  "description": "AI-powered chat assistant for generating BDD test scenarios and Playwright automation",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "playwright",
    "bdd",
    "testing",
    "automation",
    "gherkin",
    "cucumber"
  ],
  "activationEvents": [
    "onCommand:playwright-bdd-assistant.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "playwright-bdd-assistant.openChat",
        "title": "Open Playwright-BDD Chat Assistant",
        "category": "Playwright BDD"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "playwright-bdd-assistant.openChat",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Playwright-BDD Assistant",
      "properties": {
        "playwright-bdd-assistant.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for scenario generation (optional - will prompt if not provided)",
          "scope": "application"
        },
        "playwright-bdd-assistant.defaultTemperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "OpenAI temperature for scenario generation (creativity vs consistency)",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "dependencies": {
    "playwright": "^1.48.0",
    "openai": "^4.67.3",
    "dotenv": "^16.4.5"
  }
}